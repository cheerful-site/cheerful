<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.cheerful_back.domain.admin.AdminMapper">

  <insert id="insert" useGeneratedKeys="true" keyProperty="adminId">
    insert into admin_tb
    values (default, #{adminName}, #{email}, #{profileImgPath}, #{role}, #{provider}, #{providerId})
  </insert>

  <select id="findById" resultType="com.korit.cheerful_back.domain.admin.Admin">
    select
      *
    from
      admin_tb
    where
      admin_id = #{adminId}
  </select>

  <select id="findByProviderId" resultType="com.korit.cheerful_back.domain.admin.Admin">
    select
      *
    from
      admin_tb
    where
      provider_id = #{providerId}
  </select>

</mapper>