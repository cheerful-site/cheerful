<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.cheerful_back.domain.user.UserMapper">

  <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
    insert into user_tb
    values (default, #{username}, #{email}, #{profileImgPath}, #{role}, #{provider}, #{providerId})
  </insert>

  <delete id="deleteByUserIds"></delete>

  <select id="findById" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_id = #{userId}
  </select>

  <select id="findByUserName" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_name = #{username}
  </select>

</mapper>