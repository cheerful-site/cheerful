<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.cheerful_back.domain.user.UserMapper">
  <resultMap id="UserMap" type="com.korit.cheerful_back.domain.user.User">
    <id property="userId" column="user_id"/>
    <result property="username" column="username"/>
    <result property="password" column="password"/>
    <result property="name" column="name"/>
    <result property="email" column="email"/>
    <result property="profileImgPath" column="profile_img_path"/>
    <result property="role" column="role"/>
    <result property="provider" column="provider"/>
    <result property="providerId" column="provider_id"/>
    <result property="createdAt" column="created_at" />
    <result property="updatedAt" column="updated_at" />
  </resultMap>

  <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
    insert into user_tb
    values (default, #{username}, #{password}, #{name}, #{email}, #{profileImgPath}, #{role}, #{provider}, #{providerId}, now(), now())
  </insert>

  <delete id="deleteByUserIds" parameterType="list">
    delete
    from
      user_tb
    where
      user_id in
      <foreach item="userId" collection="userIds" separator="," open="(" close=")">
        #{userId}
      </foreach>
  </delete>

  <delete id="deleteByUserId">
    delete from user_tb
    where
      user_id = #{userId}
  </delete>

  <select id="findById" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_id = #{userId}
  </select>

  <select id="findByProviderId" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      provider_id = #{providerId}
  </select>

  <select id="findAllBySearchOption" resultMap="UserMap">
    select
      *
    from
      user_tb
    where
      username like concat('%', #{searchText}, '%')
      or email like concat('%', #{searchText}, '%')
    order by
      user_id
    limit #{startIndex}, #{size}
  </select>

  <select id="getCountOfOptions" resultType="java.lang.Integer" >
    select
      count(*)
    from
      user_tb
    where
      username like concat('%', #{searchText}, '%')
      or email like concat('%', #{searchText}, '%')
  </select>

  <select id="findByUsername" resultMap="UserMap">
    select
      *
    from
      user_tb
    where
      username = #{username}
  </select>

  <!--  회원탈퇴-->
  <delete id="deleteByUser">
    delete from user_tb
    where user_id = #{userId}
  </delete>

<!--  프로필 이름 변경-->
  <update id="updateName">
    update user_tb
    set name = #{name}
    where user_id = #{userId}
  </update>

<!--  기존 프로필 이미지 파일명 가져오기-->
  <select id="getProfileImgPath" resultType="java.lang.String">
    select profile_img_path
    from user_tb
    where user_id = #{userId}
  </select>

  <!-- 프로필 이미지 파일명 업데이트 -->
  <update id="updateProfileImgPath">
    update user_tb
    set profile_img_path = #{profileImg}
    where user_id = #{userId}
  </update>

</mapper>