<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.cheerful_back.domain.user.UserMapper">

  <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
    insert into user_tb
    values (default, #{username}, #{email}, #{profileImgPath}, #{role}, #{provider}, #{providerId})
  </insert>

  <delete id="deleteByUserIds">
    delete
    from
      user_tb
    where
      user_id in
      <foreach item="userId" collection="userIds" separator="," open="(" close=")">
        #{userId}
      </foreach>
  </delete>

  <select id="findById" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_id = #{userId}
  </select>

  <select id="findByProviderId" resultType="com.korit.cheerful_back.domain.user.User">
    select
      *
    from
      user_tb
    where
      provider_id = #{providerId}
  </select>

  <select id="findAllBySearchOption" resultType="com.korit.cheerful_back.domain.user.User">
    select
      ut.user_id,
      ut.user_name,
      ut.user_email,
      ut.profile_img_path,
      ut.role,
      ut.provider,
      ut.provider_id
    from
      user_tb ut
    where
      ut.user_name like concat('%', #{searchText}, '%')
      or ut.user_email like concat('%', #{searchText}, '%')
    order by
      ut.user_id
    limit #{startIndex}, #{size}
  </select>

  <select id="getCountOfOptions" resultType="java.lang.Integer" >
    select
      count(*)
    from
      user_tb
    where
      user_name like concat('%', #{searchText}, '%')
      or user_email like concat('%', #{searchText}, '%')
  </select>

</mapper>